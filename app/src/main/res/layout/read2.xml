<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="fill"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="10dp"
    android:visibility="visible"
    android:keepScreenOn="true">


    <ImageView
        android:id="@+id/imgview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:src="@drawable/mcsh" />


    <TextView
        android:id="@+id/cval"
        android:layout_width="420dp"
        android:layout_height="280dp"
        android:layout_below="@+id/imgview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:background="@drawable/cval"
        android:gravity="center" />

    <TextView
        android:id="@+id/cvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:gravity="center"
        android:maxLength="6"
        android:maxLines="1"
        android:text="MK "
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="38dp"
        android:textStyle="bold" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="start"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:text="Driver:"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="215dp"
        android:background="#FF20D026" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:gravity="start"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="ACTIVE BUS:" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView8"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:singleLine="true"
        android:text="ACTIVE Trip#:"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:visibility="gone"
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="420dp"
        android:background="#FF20D026" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="316dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="193dp"
        android:layout_marginRight="193dp"
        android:padding="0dp"
        android:src="@drawable/end"
        android:visibility="gone" />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="130dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="invisible" />

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginStart="350dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="490dp"
        android:layout_marginRight="490dp"
        android:background="@drawable/backb" />

    <Button
        android:id="@+id/button9"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/cval"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-80dp"
        android:background="@drawable/dpin" />


</RelativeLayout>







