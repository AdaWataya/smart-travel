<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="fill"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:padding="10dp"
    android:visibility="visible">
    <!--
    <Button
        android:id="@+id/whatsapp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:clickable="true"
        android:text="Publish Location"
        android:textColor="@color/black"
        android:visibility="invisible" />

-->

    <TextView
        android:id="@+id/ct"
        android:layout_width="233dp"
        android:layout_height="81dp"
        android:layout_below="@+id/mna"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="83dp"
        android:background="@drawable/ct"
        android:gravity="center" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_below="@+id/ct"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:background="@drawable/gryb"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:shadowColor="@color/black"
        android:text=" Driver:"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!--
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="755dp"
        android:background="#FF20D026" />
-->

    <EditText
        android:id="@+id/busnumber"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/tv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:background="@drawable/gryb"
        android:gravity="center"
        android:tag="+61 "
        android:hint="  Enter Bus#/read the tag  "
        android:text=""

        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/routenumber"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_below="@+id/tn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:background="@drawable/mlog"
        android:gravity="center"
        android:hint="  Enter Trip#  "
        android:inputType="time"
        android:lines="1"
        android:maxLength="8"
        android:textSize="22sp"
        android:textStyle="bold" />

<!--
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="start"
        android:layout_marginTop="720dp"
        android:background="#FF20D026" />
-->

    <ImageView
        android:layout_width="84dp"
        android:layout_height="121dp"
        android:layout_below="@+id/routenumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:onClick="OFBS"
        android:padding="0dp"
        android:src="@drawable/confirm"
        android:text="Confirm" />

    <ImageView

        android:id="@+id/mna"
        android:layout_width="232dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:src="@drawable/mna" />

    <ImageView
        android:id="@+id/tn"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_below="@+id/tv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:src="@drawable/tn" />


</RelativeLayout>







